<div id="card" class="row">
  <div class="col s12 m7">
    <div class="card hoverable">
      <div class="card-image">
        <img src="/images/mountains-working3.jpg">
        <span class="card-title">Clarify your big idea.</span>
      </div>
      <div class="card-content">
        <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
          <input type="hidden" name="_method" value="PUT"> {{#each errors}}
          <div class="card-panel red lighten-5">
            <span class="red-text text-darken-2">{{text}}</span>
          </div>
          {{else}} {{/each}}
          <div class="row">
            <div class="input-field col s6">
              <input id="topic" type="text" name="topic" value="{{idea.topic}}" class="validation" required oninvalid="this.setCustomValidity('You\'ll need at least a Topic')"
                oninput="setCustomValidity('')">
              <label for="topic">Topic</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="details">Details</label>
              <textarea id="details" class="materialize-textarea validation" name="details">{{idea.details}}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <button class="btn waves-effect waves-light right" type="submit">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>